<%- include('./shared/header.ejs') %>
 <!-- Breadcrumb Section Begin -->
 <section class="breadcrumb-section set-bg" data-setbg="/assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Thông tin chi tiết đơn hàng</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Trang chủ</a>
                        <a href="/orders">Đơn hàng</a>
                        <span>Chi tiết</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Thông tin giao hàng</h4>
            
                <div class="row">
                    <div class="col-lg-6 col-md-6">
                        <div class="checkout__input">
                            <p><b>Họ tên:</b> <span> <%= order.orderDetailId.fullname %></span></p>
                        </div>
                        <div class="checkout__input">
                            <p><b>Địa chỉ:</b> <span> <%= order.orderDetailId.address %></span></p>
                        </div>
                        <div class="checkout__input">
                            <p><b>Số điện thoại:</b> <span> <%= order.orderDetailId.phone %></span></p>
                        </div>
                        <div class="checkout__input">
                            <p><b>Email:</b> <span> <%= order.orderDetailId.email %></span></p>
                        </div>
                        <div class="checkout__input">
                            <p><b>Ghi chú/Lời nhắn:</b> <span> <%= order.orderDetailId.message %></span></p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn hàng của bạn</h4>
                            <div class="checkout__order__products">Sản phẩm <span>Số tiền</span></div>
                            <ul>
                                <% if (order.items.length > 0) { %>
                                    <% for (item of order.items) { %>
                                        <li><a href="/product/<%= item.product._id %>"><%= item.product.name %></a> <b>x <%= item.quantity %></b> <span>$<%= item.product.price * item.quantity %></span></li>
                                    <% } %>
                                <% } %>
                            </ul>
                            <div class="checkout__order__subtotal">Giảm giá <span>$0</span></div>
                            <div class="checkout__order__total">Tổng số tiền <span>$<%= order.totalAmount %></span></div>                          
                        </div>
                    </div>
                </div>
            
        </div>
    </div>
</section>
<!-- Checkout Section End -->
<%- include('./shared/footer.ejs') %>