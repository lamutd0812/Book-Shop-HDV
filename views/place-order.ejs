<%- include('./shared/header.ejs') %>
 <!-- Breadcrumb Section Begin -->
 <section class="breadcrumb-section set-bg" data-setbg="/assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Đặt hàng</h2>
                    <div class="breadcrumb__option">
                        <a href="/">Trang chủ</a>
                        <span>Đặt hàng  </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Checkout Section Begin -->
<section class="checkout spad">
    <div class="container">
        <div class="checkout__form">
            <h4>Thông tin giao hàng</h4>
            <form action="/place-order" method="POST">
                <div class="row">
                    <div class="col-lg-5 col-md-6">
                        <div class="checkout__input">
                            <p>Họ tên<span>*</span></p>
                            <input type="text" id="fullname" name="fullname">
                        </div>
                        <div class="checkout__input">
                            <p>Địa chỉ<span>*</span></p>
                            <input type="text" id="address" name="address" class="checkout__input__add">
                        </div>
                        <div class="row">
                            <div class="col-lg-5">
                                <div class="checkout__input">
                                    <p>Số điện thoại<span>*</span></p>
                                    <input type="text" id="phone" name="phone">
                                </div>
                            </div>
                            <div class="col-lg-7">
                                <div class="checkout__input">
                                    <p>Email<span>*</span></p>
                                    <input type="text"
                                        id="email"
                                        name="email"
                                        value="<%= user.local.email %> <%= user.facebook.email %> <%= user.google.email %>">
                                </div>
                            </div>
                        </div>
                        <div class="checkout__input">
                            <p>Ghi chú/ Lời nhắn<span>*</span></p>
                            <input type="text"
                                id="message"
                                name="message"
                                placeholder="Lưu ý đặc biệt của bạn về đơn hàng">
                        </div>
                    </div>
                    <div class="col-lg-7 col-md-6">
                        <div class="checkout__order">
                            <h4>Đơn hàng của bạn</h4>
                            <div class="checkout__order__products">Sản phẩm <span>Số tiền</span></div>
                            <ul>
                                <% if (cartItems.length > 0) { %>
                                    <% for (item of cartItems) { %>
                                        <li><a href="/product/<%= item.product._id %>"><%= item.product.name %></a> <b>x <%= item.quantity %></b> <span>$<%= item.product.price * item.quantity %></span></li>
                                    <% } %>
                                <% } %>
                            </ul>
                            <div class="checkout__order__subtotal">Giảm giá <span>$0</span></div>
                            <div class="checkout__order__total">Tổng số tiền <span>$<%= totalPrice %></span></div>                          
                            <button type="submit" class="site-btn">ĐẶT HÀNG</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
<!-- Checkout Section End -->
<%- include('./shared/footer.ejs') %>